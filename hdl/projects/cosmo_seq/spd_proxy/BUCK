        "//hdl/ip/vhd/i2c/common:i2c_glitch_filter",
        "//hdl/ip/vhd/i2c/controller:i2c_ctrl_txn_layer",
    ],
    standard = "2019",
    visibility = ['PUBLIC'],
)

