load("//tools:hdl.bzl", "vhdl_unit", "vunit_sim")
load("//tools:rdl.bzl", "rdl_file")

rdl_file(
    name = "spd_proxy_regs_rdl",
    src = "sp_control/spd_proxy_regs.rdl",
    outputs = [
        "spd_proxy_regs_pkg.vhd", 
        "spd_proxy_regs.html", 
        "spd_proxy_regs.json",
    ],
    visibility = ["PUBLIC"],
)

vhdl_unit(
    name = "sda_arbiter",
    srcs = glob(["sda_arbiter/*.vhd"]),
    deps = [],
    visibility = ['PUBLIC'],
)

